def somar(a,b):
	return a+b

while True:
	opc = int(input('Menu:\n[1] - IMC\n[2] - Manipular Strings\n[3] - Sair\n'))

	if opc == 1:
		while True:
			peso = float(input('Informe o peso:\n'))
			alt = float(input('Informe a altura (em metros):\n'))
			sexo = int(input('Informe o sexo:\n[1] - Masculino\n[2] - Feminino\n'))
			imc = peso / (alt * alt)

			if sexo == 1:
				if imc < 20.7:
					print('Você está abaixo do peso')
					
				elif imc >= 20.7 and imc < 26.4:
					print('Você está no peso normal')
					
				elif imc >= 26.4 and imc < 27.8:
					print('Você está marginalmente acima do peso')
					
				elif imc >= 27.8 and imc <= 31.1:
					print('Você está acima do peso')
					
				elif imc > 31.1:
					print('Você está obeso')
					
			elif sexo == 2:
				if imc < 19.1:
					print('Você está abaixo do peso')
					
				elif imc >= 19.1 and imc < 25.8:
					print('Você está no peso normal')
					
				elif imc >= 25.8 and imc < 27.3:
					print('Você está marginalmente acima do peso')
					
				elif imc >= 27.3 and imc <= 32.3:
					print('Você está acima do peso')
					
				elif imc > 32.3:
					print('Você está obesa')
					
			else:
				print('Sexo inválido')

			opc = int(input('Deseja calcular mais imc?\n[1] - Sim\n[2] - Não\n'))

			if opc == 1:
				pass
			elif opc == 2:
				break
			else:
				print('Opção Inválida!') 
	
	elif opc == 2:
		while True:
			texto = input('Digite uma palavra ou um texto:\n')
			opc = int(input('Selecione a opção que você deseja para manipular essa palavra ou texto:\n[1] - Ver quantas letras tem no texto\n[2] - Fazer o texo completo ficar com letras maiúsculas\n[3] - Fazer o texo completo ficar com letras minúsculas\n[4] - Deixar a primeira letra do texto maiúscula\n[5] - Deixar a primeira letra de cada palavra maiúcula\n[6] - Fazer com que as letras maiúsculas fiquem minúsculas e vice-versa\n[7] - Identificar se só tem letras do alfabeto no texto\n[8] - saber quantas letras específicas tem no texto\n'))

			if opc == 1:
				print(len(texto))

			elif opc == 2:
				texto_upper = texto.upper()
				print(texto_upper)

			elif opc == 3:
				texto_lower = texto.lower()
				print(texto_lower)

			elif opc == 4:
				texto_capitalize = texto.capitalize()
				print(texto_capitalize)

			elif opc == 5:
				texto_title = texto.title()
				print(texto_title)

			elif opc == 6:
				texto_swapcase = texto.swapcase()
				print(texto_swapcase)

			elif opc == 7:
				print(texto.isalpha())

			elif opc == 8:
				letra = input('Digite a letra que você deseja saber quantas vezes ela aparece no texto\n')
				valor = texto.count(letra)
				print(valor)

			else:
				print('Opção Inválida!')

			opc2 = int(input('Deseja continuar?\n[1] - Sim\n[2] - Não\n'))

			if opc2 == 1:
				pass
			elif opc2 == 2:
				break
			else:
				print('Opção Inválida!')

	elif opc == 3:
		break

	else:
		print('Opcão Inválida')
